<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/EntryLayout" android:background="#FFFEFE">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="316dp"
        android:layout_height="296dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="132dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dollar" />

    <TextView
        android:id="@+id/quote"
        android:layout_width="363dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/dancingscript"
        android:gravity="center"
        android:includeFontPadding="true"
        android:text="Manage your money well."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/header"
        android:layout_width="257dp"
        android:layout_height="44dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="40dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Money Manager"
        android:textColor="#D2891E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:text="NEXT"
            android:layout_width="113dp"
            android:layout_height="45dp" android:id="@+id/next_button"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/quote" android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp" app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white" app:backgroundTint="#fab833" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="202dp" android:layout_marginStart="202dp"
            app:layout_constraintHorizontal_bias="1.0" android:onClick="sendMessage"/>
</androidx.constraintlayout.widget.ConstraintLayout>